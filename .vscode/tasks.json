{
    "version": "2.0.0",
    "tasks": [
        {
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "./TestClient/TestClient.fsproj"
            ],
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "label": "build TestClient"
        },
        {
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "./TranscriptionServiceHost/TranscriptionServiceHost.fsproj"
            ],
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "label": "build Host"
        },
        {
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "./TranscriptionClient/TranscriptionClient.fsproj"
            ],
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "label": "build Transcription Client"
        },
        {
			"command": "dotnet",
			"type": "process",
			"args": [
				"publish",
				"TranscriptionClient/TranscriptionClient.fsproj",
                "-f:net10.0",
				"-c:Release",
				"-o:../TranscriptionClient/app"
			],
			"problemMatcher": [
				"$msCompile"
			],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"label": "publish client"
		},
        {
			"command": "dotnet",
			"type": "process",
			"args": [
				"publish",
				"TranscriptionServiceHost/TranscriptionServiceHost.fsproj",
                "-f:net10.0",
				"-c:Release",
				"-o:../TranscriptionService/app"
			],
			"problemMatcher": [
				"$msCompile"
			],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"label": "publish service"
		}        
    ]
}